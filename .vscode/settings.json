{
  // Editor settings
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.rulers": [120],
  
  // Swift-specific settings
  "[swift]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "vknabel.vscode-swift-format"
  },
  
  // Files settings
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  
  // Swift format settings (if using swift-format extension)
  "swift.format.indentation": 4,
  "swift.format.lineLength": 120,
  
  // Exclude build artifacts from search
  "search.exclude": {
    "**/.build": true,
    "**/.swiftpm": true,
    "**/xcframework": true,
    "**/xcframework-with-resources": true,
    "**/.build-xcode": true,
    "**/archives": true
  },
  
  // File watcher exclusions
  "files.watcherExclude": {
    "**/.build": true,
    "**/.swiftpm": true,
    "**/xcframework": true,
    "**/xcframework-with-resources": true,
    "**/.build-xcode": true
  }
}

